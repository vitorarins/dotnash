# Setup environment variables

IFS = ("\n")

setenv SHELL

GOVERSION        = "go1.7"
GOPATH           = $HOME+"/go"
LBIN             = $HOME+"/bin"
FZFPATH          = $HOME+"/.fzf"
GOROOT           = "/usr/local/go"
CDPATH           = ($HOME $GOPATH+"/src")
LANG             = "en_US.UTF-8"
PATH             = ""
SHELL            = $GOPATH+"/bin/nash"
paths = (
	"/bin"
	"/sbin"
	"/usr/bin"
	"/usr/sbin"
	"/usr/local/bin"
	$GOROOT+"/bin"
	$GOPATH+"/bin"
	$FZFPATH+"/bin"
	$LBIN
)

for p in $paths {
	PATH = $PATH+":"+$p
}

setenv LANG
setenv SHELL
setenv GOPATH
setenv GOROOT
setenv PATH
