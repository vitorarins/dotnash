# Setup environment variables

var GOPATH           = $HOME+"/go"
var LBIN             = $HOME+"/bin"
var FZFPATH          = $HOME+"/.fzf"
var GOROOT           = $HOME+"/goroot"
var PERL_VENDOR      = "/usr/bin/vendor_perl"
var CDPATH           = ($HOME $GOPATH+"/src")
var LANG             = "en_US.UTF-8"
var SHELL            = $GOPATH+"/bin/nash"
var TERM	     = "xterm"
var TERMINAL         = "kitty"

var PATH = ""

var paths = (
	"/bin"
	"/sbin"
	"/usr/bin"
	"/usr/sbin"
	"/usr/local/bin"
	$GOROOT+"/bin"
	$GOPATH+"/bin"
	$FZFPATH+"/bin"
        $PERL_VENDOR
	$LBIN
)

for p in $paths {
	if $PATH == "" {
		PATH = $p
	} else {
		PATH = $PATH+":"+$p
	}
}

setenv LANG
setenv SHELL
setenv TERM
setenv TERMINAL
setenv GOPATH
setenv GOROOT
setenv PATH
