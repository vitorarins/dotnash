# Setup environment variables

var NASHPATH    = $HOME+"/.nash"
var NASHROOT    = $HOME+"/nashroot"
var GOPATH      = $HOME+"/go"
var GOROOT      = $HOME+"/goroot"
var LBIN        = $HOME+"/bin"
var FZFPATH     = $HOME+"/.fzf"
var PERL_VENDOR = "/usr/bin/vendor_perl"
var CDPATH      = ($HOME $GOPATH+"/src")
var LANG        = "en_US.UTF-8"
var GCLOUDBIN  = $HOME+"/Downloads/google-cloud-sdk/bin"
var SHELL       = $NASHROOT+"/bin/nash"
var TERM	= "xterm"
var TERMINAL    = "terminator"

var PATH = ""

var paths = (
	"/bin"
	"/sbin"
	"/usr/bin"
	"/usr/sbin"
	"/usr/local/bin"
        $NASHROOT+"/bin"
	$GOROOT+"/bin"
	$GOPATH+"/bin"
	$FZFPATH+"/bin"
        $GCLOUDBIN
        $PERL_VENDOR
	$LBIN
)

for p in $paths {
	if $PATH == "" {
		PATH = $p
	} else {
		PATH = $PATH+":"+$p
	}
}

setenv LANG
setenv SHELL
setenv TERM
setenv TERMINAL
setenv GOPATH
setenv GOROOT
setenv NASHPATH
setenv NASHROOT
setenv PATH
